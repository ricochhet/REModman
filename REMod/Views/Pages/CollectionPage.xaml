<Page
    x:Class="REMod.Views.Pages.CollectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:REMod.Views.Pages"
    xmlns:models="clr-namespace:REMod.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:conf="clr-namespace:REMod.Configuration"
    Title="CollectionPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="42" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <!--<ColumnDefinition Width="3.5*" />
                    <ColumnDefinition Width="1.5*" />-->
                </Grid.ColumnDefinitions>
                <!--<ui:CardControl Margin="8,8,8,0" Padding="16,13,16,12" Grid.Column="0" HorizontalAlignment="Stretch" MinHeight="65">
                    <ui:CardControl.Header>
                        <StackPanel>
                            {Binding Source={ x:Static conf:Constants.MAX_NOTIFY_CHAR_LENGTH }}
                            <TextBlock FontSize="14" Text="Select Game" />
                        </StackPanel>
                    </ui:CardControl.Header>
                    <ComboBox
                        MinWidth="200"
                        HorizontalAlignment="Left"
                        SelectedIndex="0"
                        Name="GameSelector_ComboBox"
                        Initialized="GameSelector_ComboBox_Initialize"
                        SelectionChanged="GameSelector_ComboBox_SelectionChanged">
                    </ComboBox>
                </ui:CardControl>-->
                <ui:CardControl Margin="8,8,8,0" Padding="16,13,16,12" HorizontalAlignment="Stretch">
                    <ui:CardControl.Header>
                        <StackPanel>
                            <TextBlock FontSize="14" Text="Select Game" />
                        </StackPanel>
                    </ui:CardControl.Header>
                    <ComboBox
                        MinWidth="200"
                        HorizontalAlignment="Left"
                        SelectedIndex="0"
                        Name="GameSelector_ComboBox"
                        Initialized="GameSelector_ComboBox_Initialize"
                        SelectionChanged="GameSelector_ComboBox_SelectionChanged">
                    </ComboBox>
                </ui:CardControl>
                <!--<ui:CardAction Grid.Column="1" Margin="0,8,8,0" Padding="16,13,16,12" Icon="ArrowCounterclockwise32" HorizontalAlignment="Stretch" MinHeight="65">
                    <StackPanel>
                        <TextBlock FontSize="14" Text="Refresh" />
                    </StackPanel>
                </ui:CardAction>-->
            </Grid>
            <Grid Margin="0,8,0,0">
                <ui:VirtualizingItemsControl
                    x:Name="ModsItemsControl"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    VirtualizingPanel.CacheLengthUnit="Item">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:ModInfoBridge}">
                            <ui:CardControl Margin="8" Padding="16,13,16,12" MinWidth="100">
                                <ui:CardControl.Header>
                                    <StackPanel>
                                        <TextBlock FontSize="14" Text="{Binding Name, Mode=OneWay}" />
                                        <TextBlock FontSize="14" Text="{Binding Description, Mode=OneWay}" />
                                        <TextBlock FontSize="12" Text="{Binding Guid, Mode=OneWay}" Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
                                        <TextBlock FontSize="12" Text="{Binding Version, Mode=OneWay}" Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
                                    </StackPanel>
                                </ui:CardControl.Header>
                                <ui:Button Grid.Column="0" Margin="0,0,4,0" Icon="Add28" Content="Install" HorizontalAlignment="Stretch" Command="models:CollectionPageViewModel.InstallModCommand">
                                    <Button.CommandParameter>
                                        <MultiBinding Converter="{StaticResource ModInfoBindings}">
                                            <Binding Path="Name"/>
                                            <Binding Path="Guid"/>
                                            <Binding Path="GameType"/>
                                            <Binding Path="LogBox"/>
                                        </MultiBinding>
                                    </Button.CommandParameter>
                                </ui:Button>
                            </ui:CardControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ui:VirtualizingItemsControl>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
